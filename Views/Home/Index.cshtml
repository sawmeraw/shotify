</div>


<div class="container-fluid mt-4 bg-white p-4 rounded shadow-sm d-flex gap-4 justify-content-between align-items-start">
    <div class="px-2 flex-grow-1">
        <h2 class="fs-4 fw-semibold mb-4">Tips</h2>
        <p>Select the brand and paste the product code and click the Search button.</p>
        <p>Download button will download all of the images at once.</p>

        <div class="mt-4">
            <h3 class="fs-5 fw-semibold mb-3">Managing brands</h3>
            <ul class="list-styled">
                <li class="mb-3">You can set brand configurations through the admin panel.</li>
                <li class="mb-3">The set displayed on the preview can be downloaded as a zip file using the download
                    button on the Preview.</li>
                <li class="mb-3">Images can be added to the cargo and downloaded later as a whole.</li>
            </ul>
        </div>
    </div>
</div>



@section Scripts {
    <script type="module">
        import {previewImagesDownload} from "/js/cropper.js";

        if (!window.App) {
            window.App = {}
        }

        window.App.preview = {
            images: [],
            loading: false,
            error: null
        };

        $(function () {
            let searchBtn = $("#searchBtn");
            let $downloadBtn = $("#downloadBtn");
            let $productCode = $("#productCode").val();

            $downloadBtn.on("click", async()=>{
                try{
                    await previewImagesDownload($productCode, window.App.preview.images);
                } catch(error){
                    console.error(error);
                }
            });

            $("#option-container .option-btn-container button").on("click", function () {
                $("#option-container .option-btn-container button").removeClass("selected");

                $(this).addClass("selected");
                let selectedText = $(this).html();
                $("#selectedBrand").text(selectedText);
                if ($("#settingsIcon").hasClass("d-none")) {
                    $("#settingsIcon").removeClass("d-none");
                }
                let brandId = $(this).data("name");
                $("#brandConfigLink").attr("href", `/admin/brand/${brandId}`);
            })

            searchBtn.on("click", function () {
                let selectedBrandBtn = $("#option-container .option-btn-container button.selected");
                if (selectedBrandBtn.length == 0) {
                    $("#selectedBrand").addClass("highlight");
                    setTimeout(function () {
                        $("#selectedBrand").removeClass("highlight");
                    }, 3000);
                } else {
                    let brandId = selectedBrandBtn.data("name");
                    let productCode = $("#productCode").val();
                    if (!productCode || productCode == "") {
                        setPreviewState({ loading: false, error: "Please provide product code to search.", images: [] });
                    } else {
                        searchImages(brandId, productCode);
                    }
                }
            })
        })

        async function searchImages(brandId, productCode) {
            setPreviewState({ loading: true, error: null, images: [] });
            try {
                const response = await fetch(`/api/search?brandId=${encodeURIComponent(brandId)}&productCode=${encodeURIComponent(productCode)}`);
                const data = await response.json();
                if (!response.ok) {
                    if (data.message && data.message != "") {
                        setPreviewState({ loading: false, images: null, error: data.message });
                        return;
                    }
                    setPreviewState({ loading: false, images: null, error: "Oops! Something went wrong." });
                    return;
                }

                const results = await Promise.all(
                    data.map(async (url) => {
                        try {
                            const res = await fetch(url, { method: "HEAD" });
                            if (!res.ok) {
                                throw new Error(`Bad status: ${res.status}`);
                            }
                            return url;
                        } catch (err) {
                            console.error(`Error checking ${url}:`, err);
                            return null;
                        }
                    })
                );

                const validImages = results.filter(Boolean);
                setPreviewState({ loading: false, images: validImages, error: null });

            } catch (error) {
                setPreviewState({ loading: false, error: error.message });
            }
        }

        function renderPreview() {
            const container = $("#preview-images");
            container.empty();

            if (window.App.preview.loading) {
                container.html(`<div class="d-flex justify-content-center align-items-center" style="height:100%; width:100%;"><div class="spinner-border text-info"></div></div>`);
            } else if (window.App.preview.error) {
                container.html(`<div class='text-danger mx-auto'>${window.App.preview.error}</div>`);
            } else if (window.App.preview.images.length > 0) {
                window.App.preview.images.forEach(img => {
                    container.append(`<img src="${img}" class="preview-img" />`);
                });
            } else {
                container.html("<div class='text-danger mx-auto'>No images found.</div>");
            }
        }

        function setPreviewState(newState) {
            window.App.preview = { ...window.App.preview, ...newState };
            renderPreview();
        }

        async function downloadImages(){
            try{
                await previewImagesDownload(window.App.images);
            } catch(error){
                console.error(error);
            }
        }

    </script>
}