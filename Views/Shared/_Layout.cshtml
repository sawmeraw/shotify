<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shotify</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shotify.styles.css" asp-append-version="true" />
</head>

<body>
    <div id="shotify-root">

        <header class="header">
            <div class="container header-content">
                <div class="app-title">
                    <a href="/" title="Go to Home Dashboard">
                        <span class="logo-shot">Shot</span><span class="logo-ify">ify</span>
                    </a>
                </div>
                <nav class="nav-links">
                    <a href="/Admin" title="Access administrative tools">Admin</a>
                    <a href="/About" title="Learn more about this application">About</a>
                </nav>
            </div>
        </header>

        <div class="body-wrapper">
            <div class="body-container">
                <h1 class="main-heading">@ViewData["PageHeading"]
                    @if (!string.IsNullOrEmpty(ViewData["EntityName"]?.ToString()))
                    {
                        @(": " + ViewData["EntityName"])
                    }
                </h1>
                <div class="content-card">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <footer class="footer">
            <div class="container">
                <p>&copy; 2024 Shotify. Built for efficient image management.</p>
            </div>
        </footer>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>