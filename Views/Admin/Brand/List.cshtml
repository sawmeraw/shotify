@using Shotify.Models.DTOs
@model List<BrandListItemDTO>
@{
    ViewData["Title"] = "Brands";
    ViewData["PageHeading"] = "";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-black mb-0">Brands</h2>
            <p class="text-muted">Manage your product brands and manufacturers.</p>
        </div>
        <a href="/admin/brand/create" class="btn btn-secondary px-4">
            <i class="bi bi-plus-lg"></i> Add New Brand
        </a>
    </div>

    <div class="card bg-dark border-secondary shadow">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var brand in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@brand.Name</span>
                                </td>
                                <td class="text-end">
                                    <a href="/admin/brand/@brand.Id" class="btn btn-sm btn-outline-info me-2">
                                        Edit
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                No brands found. Click "Add New Brand" to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>