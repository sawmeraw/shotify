                    </a>
                    
                </nav>
            </div>
        </header>

        <div class="body-wrapper">
            <div class="body-container">
                <h1 class="main-heading">@ViewData["PageHeading"]
                    @if (!string.IsNullOrEmpty(ViewData["EntityName"]?.ToString()))
                    {
                        @(": " + ViewData["EntityName"])
                    }
                </h1>
                <div class="content-card">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <footer class="footer">
            <div class="container">
                <p>&copy; @DateTime.Now.Year Shotify.</p>
            </div>
        </footer>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>